sudo timedatectl set-timezone Europe/Moscow
sudo apt install php php-gd php-ldap php-mbstring php-dom php-fileinfo php-simplexml php-xmlreader php-xmlwriter php-curl php-intl php-mysqli php-bz2 php-zip bzip2 php-pear php-apcu php-xmlrpc
